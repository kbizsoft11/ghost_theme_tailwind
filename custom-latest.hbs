<link rel="stylesheet" href="{{asset "assets/built/tailwind.css"}}">
<link rel="stylesheet" href="{{asset "assets/built/screen.css"}}">
<link rel="stylesheet" href="{{asset "assets/fonts/fonts.css"}}">
<title>{{page.title}} - {{@site.title}}</title>
{{> header}}

<main class="container mx-auto my-5">
  <h1 class="text-4xl font-bold text-center mb-8">{{page.title}}</h1>
  <section class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {{#get "posts" limit="5" filter="visibility:public" include="tags,authors"}}
      {{#foreach posts}}
        <article class="bg-white rounded-lg shadow-2xl overflow-hidden">
          {{#if feature_image}}
            <img src="{{feature_image}}" alt="{{title}}" class="w-full h-52 object-cover">
          {{/if}}
          <div class="p-4">
            <h2 class="text-xl font-semibold mb-2">
              <a href="{{url}}" class="hover:text-indigo-600 transition">{{title}}</a>
            </h2>
            <div class="text-gray-600 text-sm mb-4">
              <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
              <span class="mx-2">|</span>
              by {{#foreach authors}}<a href="{{url}}" class="text-indigo-500 hover:underline">{{name}}</a>{{/foreach}}
            </div>
            <p class="text-gray-700 mb-4">{{excerpt}}</p>
            <a href="{{url}}" class="inline-block bg-indigo-500 text-white px-4 py-2 rounded hover:bg-indigo-600 transition">Read More</a>
          </div>
        </article>
      {{/foreach}}
    {{/get}}
  </section>
</main>

{{> footer}}