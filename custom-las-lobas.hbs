{{!< default}}
{{#post}}
    <div class="las-lobas m-auto w-9/10 pcs:w-4/5">
        <div class="section-header inline-block w-full relative mt-12 mb-12">
            <div class="inner">
                <div class="w-1/2 md:w-1/3 float-left">
                        <div class="w-full flex items-baseline m-auto">
                            <div class="w-1/5 float-left">
                                {{> icons/lobaauyando width=82 height=95 classes="w-12 xs:w-16 s:w-20 block"}}
                            </div>
                            <div class="w-4/5 text-3xl uppercase float-left pl-2">
                                <span class="font-karma-light">Las Lobas</span>
                            </div>
                        </div>
                        <div class="w-full m-auto">
                            <span class="text-5xl">{{title}}</span>
                        </div>
                </div>
                <div class="w-1/2 pt-12 md:w-2/3 float-left">
                    <div class="font-karma-light text-left md:text-right px-6 md:px-20 md:pr-0">
                        {{meta_description}}
                    </div>
                </div>
            </div>
        </div>
        {{#if access}}
                <div class="content ">
                        <div class="pt-12 w-full w-full font-karma-light">
                            {{content}}
                        </div>
                </div> 
        {{else}}
            <div class="excerpt-single-post">
                {{excerpt}}
            </div>
            <div class="no-access-message">
                {{t "You don't have access to this post on"}} <strong>{{@site.title}}</strong> 
                {{t "at the moment, but if you upgrade your account you'll be able to see the whole thing, as well as all the other posts in the archive! Subscribing only takes a few seconds and will give you immediate access."}}
            </div>
            <div class="post-upgrade-cta-box text-center">
                {{#if @member}}
                <h2 class=" cta-title">{{t "This post is for paying subscribers only"}}</h2>
                {{else}}
                <h2 class=" cta-title">{{t "This post is for subscribers only"}}</h2>
                {{/if}}
                <a class="btn btn-primary btn-cta" href="{{@site.url}}/signup/">{{t "Subscribe now"}}</a>
                <p class="sign-in-cta"><small>{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small></p>
            </div>
        {{/if}}
    </div>
{{/post}}