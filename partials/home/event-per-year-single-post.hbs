{{#get "posts" limit="3"  filter="tags:{{tag}}"}}
    {{#foreach posts visibility="all"}}
        <div class="{{post_class}} {{classes}} pb-28 even:pl-2 odd:pr-2 w-1/2 md:w-1/3 relative float-left md:p-4 ">
                <div class="featured-image-wrap relative">
                    <div class="featured-image">
                        <a href="{{url}}" title="{{{title}}}">
                            <img class="w-full max-h-36 s:max-h-56 l:max-h-72 l:min-h-18rem m:min-h-28rem min-h-14rem md:min-h-14rem ganma:min-h-18rem s:min-h-18rem object-cover" srcset="{{img_url feature_image size="m"}} 600w,
                                    {{img_url feature_image size="l"}} 1000w"
                                        sizes="(min-width: 768px) and (max-width: 991px) 1000px, 600px"
                                            src="{{img_url feature_image size="m"}}"
                                                alt="{{title}}"
                            />
                        </a>
                    </div>
                    <div class="overlay -bottom-24 md:top-4/5 p-2 w-9/10 absolute md:p-2 pcs:p-8 min-w-7/10 min-h-3/5 -right-px  bg-white">
                        <a class="link" href="{{url}}"></a>
                        <div class="content-container">
                            <time class="date text-xs font-karma-bold text-primary-gray" datetime="{{date format="YYYY-MM-DD"}}" title="{{date format="DD MMMM, YYYY"}}">{{date format="MMMM DD, YYYY"}}</time>
                            <div class="col-lg-6 tag-title">
                                    <h2 class="title font-karma-bold text-sm xs:text-base l:text-xl text-primary-black s:text-base md:text-base pcs:text-xl">{{title}}</h2>
                            </div>
                            <div class="col-lg-6 excert">
                                <div class="excerpt excerpt-content">
                                    <span class="font-karma-light text-xs xs:text-sm l:text-lg md:text-base pcs:text-lg">{{excerpt words="6"}}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    {{/foreach}}
{{/get}}
