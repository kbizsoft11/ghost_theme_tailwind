<div class="puro-cuento m-auto w-9/10 s:w-4/5 w-full md:w-9/10 pcs:w-4/5 pt-12 s:pt-0 md:mt-28 md:mb-20 ganma:mb-32 pcs:mb-56 clear-both">
    {{#get "posts" limit="1"  include="authors" filter="tags:{{tag}}"}}
        {{#foreach posts visibility="all"}}
            <div class=" flex md:w-1/2 md:float-left">
                <div class="outer  md:w-72 xs:w-72 xs:80  m-auto relative float-left md:h-72 teta:h-96 teta:w-96 ganma:h-104 ganma:w-104 pcs:h-108 pcs:w-108">
                    <div class="w-full min-h-inherit md:w-2/3 md:w-full  border h-full rounded-full relative m-auto">
                        <div class="relative md:max-h-unset ml-2% mt-2% mb-2% w-96% h-96%">
                            
                            <img class="rounded-full h-full md:max-h-unset h-auto md:h-full w-full bg-gradient-to-t object-cover from-yellow-400 via-red-500 to-pink-500" srcset="{{img_url feature_image size="m"}} 600w,
                                                    {{img_url feature_image size="l"}} 1000w"
                                            sizes="(min-width: 768px) and (max-width: 991px) 1000px, 600px"
                                            src="{{img_url feature_image size="m"}}"
                                            alt="{{title}}"
                                            />
                            <div class="player w-1/3  flex top-1/3 left-1/3 absolute h-1/3 bg-white rounded-full">
                                <audio id="cuento-audio">
                                    <source src="assets/audios/puro-cuento/intro.mp3" type="audio/mpeg">
                                    Your browser does not support the audio tag.
                                </audio>
                                <div id="home-player" class="absolute w-92% left-4% top-4% m-auto"></div>
                                <span class="time block text-center text-base hidden">00:00</span>
                                <div class="relative m-auto block w-full h-full">
                                    {{> icons/play width="33" height="51" audio_id="cuento-audio" classes="play w-1/3 h-full m-auto cursor-pointer" viewbox="0 0 53 71" fill="#1F1F1F"}}
                                    {{> icons/pause width="33" height="51" classes="pause hidden w-1/3 h-full m-auto cursor-pointer" viewbox="0 0 53 71" fill="none"}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-full md:w-1/2 inline-block">
                <div class="w-full md:w-2/3 mt-8 md:mt-0 m-auto">
                        <div class="w-full text-center md:text-left">
                            <span class="text-sm text-primary-gray xs:text-base l:text-xl md:text-base inline-block">
                                {{#if authors}}
                                    {{#foreach authors}}
                                        {{name}}
                                    {{/foreach}}
                                {{/if}}
                                -
                            </span>
                            <span class="text-sm font-karma-light text-primary-gray xs:text-base inline-block">
                                {{title}}
                            </span>
                        </div>
                        <div class="w-full mt-4 xs:mt-12 md:mt-2 md:text-left"><span class="text-5xl md:text-3xl teta:text-3xl inline-block capitalize">puro cuento</span></div>
                        <div class="w-full mt-4"><span class=" font-karma-light text-xl md:text-base teta:text-xl">{{excerpt}}</span></div>
                        <div class="mt-12 md:mt-6 teta:mt-12">
                            {{> button class="m-auto block" url="{{@site.url}}/puro-cuento" title="Escuchar m√°s" icon_src="assets/images/icons/svg/plus-white.svg"}}
                        </div>
                    </div>
            </div>
        {{/foreach}}
    {{/get}}
</div>